@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <h1>All Roles</h1>

    <form class="d-flex" asp-action="Index">
        <input type="search" placeholder="Search.........." name="SearchInput" id="SearchInput" class="form-control my-3" />

        <div>
            <button class="btn btn-outline-success  my-3 mx-2" type="submit">Search...</button>
        </div>
    </form>

    <a asp-action="Create" class="btn btn-primary"> Create Role</a>


    <br />
    <br />

    @if (Model.Count() > 0)
    {

        <table class="table table-striped table-hover table-bordered text-center">

            <thead>

                <tr>

                    <th> @Html.DisplayNameFor(D => D.Id) </th>
                    <th> @Html.DisplayNameFor(D => D.RoleName) </th>
                    <th> Details </th>
                    <th> Update </th>
                    <th> Delete </th>

                </tr>

            </thead>


            <tbody>

                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.RoleName</td>
                        <partial name="_ButtonPartialView" model="@user.Id" />

                    </tr>
                }

            </tbody>

        </table>

    }

    else
    {

        <div class=" mt-4 alert alert-danger">
            <h3> There Is No Roles :( </h3>
        </div>


    }
</div>