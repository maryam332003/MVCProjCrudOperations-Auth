@model ResetPasswordViewModel;
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "_Auth";
}


<div class="signIn-container  my-4 justify-content-end mb-4 w-50 m-auto py-5 px-3">
    <h1 class="m-auto my-5 d-flex align-items-center justify-content-center">Reset Password</h1>
    <div asp-validation-summary="All" class="text-danger" style="list-style: none;text-decoration:none"></div>
    <form class="" asp-action="ResetPassword">
            <input asp-for="NewPassword" class="input-field pt-1 my-3" type="password" placeholder="New Password" required="" />
            <input asp-for="ConfirmPassword" class="input-field pt-1 my-2" type="password" placeholder="Confirm Password" required="" />
        <button type="submit" class="ResetPassword px-4 py-2 rounded-2 my-3 w-100" value="RESETPASSWORD">
                Reset Password
            </button>
    </form>

</div>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
